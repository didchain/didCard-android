<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="Autofill,MissingConstraints">

    <data>

        <variable
            name="viewModel"
            type="com.didchain.didcard.ui.create.CreateCardViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include
            android:id="@+id/titleLayout"
            layout="@layout/title_layout"
            app:viewModel="@{viewModel}" />

        <EditText
            android:id="@+id/password"
            style="@style/PasswordEditTextStyle"
            android:layout_marginTop="16dp"
            android:hint="@string/create_account_input_password"
            android:text="@={viewModel.password}"
            app:layout_constraintTop_toBottomOf="@+id/titleLayout" />

        <EditText
            android:id="@+id/confirmPassword"
            style="@style/PasswordEditTextStyle"
            android:layout_marginTop="16dp"
            android:hint="@string/create_account_input_password_again"
            android:text="@={viewModel.confirmPassword}"
            app:layout_constraintTop_toBottomOf="@+id/password" />

        <TextView
            style="@style/YellowButtonStyle"
            onClickCommand="@{viewModel.clickCreate}"
            android:layout_marginTop="16dp"
            android:text="@string/create_account"
            app:layout_constraintTop_toBottomOf="@+id/confirmPassword" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>