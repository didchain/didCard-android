<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nbs.didcard">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".DidCardApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.DidCard">
        <!-- 适配全面屏 -->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.4" /> <!-- 适配华为(hua wei)刘海屏 -->
        <meta-data
            android:name="android.notch_support"
            android:value="true" /> <!-- 适配小米(xiao mi)刘海屏 -->
        <meta-data
            android:name="notch.config"
            android:value="portrait|landscape" />

        <activity
            android:name=".ui.main.MainActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".ui.guide.GuideActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".ui.create.account.CreateAccountActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.saveaccount.SaveAccountActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".ui.idcard.ShowIDCardActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.idmanager.UpdatePasswordActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.idcard.CreateIDCardActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.idmanager.IDCardManagerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.scan.ScanActivity"

            android:screenOrientation="portrait" />

        <provider
            android:name=".provider.ContextProvider"
            android:authorities="${applicationId}.contextprovider"
            android:exported="false" />

    </application>

</manifest>