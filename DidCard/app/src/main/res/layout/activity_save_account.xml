<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.nbs.didcard.ui.saveaccount.SaveAccountViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        tools:ignore="MissingConstraints"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:text="@string/tip"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="77dp"
            android:textSize="18sp"
            android:textColor="@color/color_0c123d"
            android:layout_marginStart="35dp"
            android:layout_height="wrap_content"
            app:drawableTopCompat="@drawable/tip_img" />

        <TextView
            android:id="@+id/des"
            app:layout_constraintTop_toBottomOf="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/color_0c123d"
            android:textSize="24sp"
            android:text="@string/save_account_des"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_constraintEnd_toStartOf="@+id/des"
            android:layout_width="wrap_content"
            android:text="@string/save_account_line"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/tip"
            android:textSize="24sp"
            android:textColor="@color/yellow"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/saveToAlbum"
            android:text="@string/save_account"
            style="@style/YellowButtonStyle"
            onClickCommand="@{viewModel.clickSaveAlbum}"
            android:layout_marginBottom="115dp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/skip"
            android:text="@string/save_account_skip"
            android:textColor="@color/color_0c123d"
            app:layout_constraintTop_toBottomOf="@+id/saveToAlbum"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            onClickCommand="@{viewModel.clickSkip}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:drawableBottomCompat="@drawable/skip_bottom_drawable" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>