<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.didchain.didcard.ui.authorizationManager.AuthorizationSystemItemViewModel" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:background="@android:color/transparent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/url"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{item.account.url}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/edit_account"
            app:layout_constraintTop_toTopOf="@+id/url"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/url"
            android:layout_width="40dp"
            android:scaleType="center"
            onClickCommand="@{item.clickEdit}"
            android:layout_height="40dp"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/userNameLab"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/url"
            android:textColor="@color/color_9b9c9f"
            android:textSize="14sp"
            android:layout_marginTop="7dp"
            android:text="@string/authorization_system_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/userName"
            app:layout_constraintStart_toEndOf="@+id/userNameLab"
            app:layout_constraintTop_toBottomOf="@+id/url"
            android:textColor="@color/color_0c123d"
            android:textSize="15sp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="4dp"
            android:text="@{item.account.userName}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/passwordLab"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userName"
            android:textColor="@color/color_9b9c9f"
            android:textSize="14sp"
            android:layout_marginTop="7dp"
            android:text="@string/authorization_system_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/password"
            app:layout_constraintStart_toEndOf="@+id/passwordLab"
            app:layout_constraintTop_toBottomOf="@+id/userName"
            android:textColor="@color/color_0c123d"
            android:textSize="15sp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="4dp"
            android:text="@{item.account.password}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/line"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp"
            android:background="@color/color_f0f1f3"
            app:layout_constraintTop_toBottomOf="@+id/password"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/isUsed"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/line"
            app:layout_constraintEnd_toStartOf="@+id/isUsedIv"
            android:textSize="12sp"
            android:textColor="@color/color_0c123d"
            android:layout_marginTop="6dp"
            android:text="@string/authorization_system_current_account"
            onClickCommand="@{item.clickUsed}"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/isUsedIv"
            app:layout_constraintTop_toTopOf="@+id/isUsed"
            app:layout_constraintBottom_toBottomOf="@+id/isUsed"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            onClickCommand="@{item.clickUsed}"
            android:src="@{item.account.isUsed ? @drawable/account_checked :  @drawable/account_uncheck}"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>