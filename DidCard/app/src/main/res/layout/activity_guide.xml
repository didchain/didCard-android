<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.didchain.didcard.ui.guide.GuideViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/account_img"
            app:layout_constraintBottom_toTopOf="@+id/bottomBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/bottomBackground"
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/createAccount"
            style="@style/YellowButtonStyle"
            onClickCommand="@{viewModel.clickCreate}"
            android:layout_marginBottom="24dp"
            android:text="@string/create_account"
            app:layout_constraintBottom_toTopOf="@+id/importAccount" />

        <TextView
            android:id="@+id/importAccount"
            style="@style/NavyBlueButtonStyle"
            onClickCommand="@{viewModel.clickImport}"
            android:layout_marginBottom="85dp"
            android:text="@string/guide_import_account"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>