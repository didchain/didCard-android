<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>
        <item name="android:layout_marginEnd">@dimen/margin_end</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="YellowButtonStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/color_0c123d</item>
        <item name="android:background">@drawable/button_bg_yellow</item>
    </style>

    <style name="NavyBlueButtonStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:background">@drawable/button_bg_0c123d</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>
        <item name="android:layout_marginEnd">@dimen/margin_end</item>
        <item name="android:paddingStart">@dimen/padding_start</item>
        <item name="android:paddingEnd">@dimen/padding_end</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>
    <style name="PasswordEditTextStyle" parent="EditTextStyle">
        <item name="android:inputType">textPassword</item>
    </style>
</resources>