<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.nbs.didcard.ui.home.HomeViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/home_top_bg"
            android:layout_height="293dp" />

        <TextView
            android:id="@+id/title"
            android:text="@string/app_name"
            style="@style/HomeTitleStyle"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/idCardTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:layout_width="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/color_9b9c9f"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="@string/main_id_card"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/idCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idCardTitle"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:textSize="18sp"
            android:text="@{viewModel.id}"
            android:textColor="@color/color_0c123d"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <com.nbs.didcard.view.SquareImageView
            android:id="@+id/qrBg"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idCard"
            android:src="@drawable/qr_bg"
            android:layout_height="0dp" />

        <com.nbs.didcard.view.QRImageView
            android:id="@+id/rq"
            android:layout_width="0dp"
            android:padding="2dp"
            android:layout_margin="47dp"
            app:layout_constraintEnd_toEndOf="@+id/qrBg"
            app:layout_constraintStart_toStartOf="@+id/qrBg"
            app:layout_constraintTop_toTopOf="@+id/qrBg"
            app:layout_constraintBottom_toBottomOf="@+id/qrBg"
            android:layout_marginEnd="16dp"
            android:layout_height="0dp" />

        <com.nbs.didcard.view.SquareImageView
            android:id="@+id/lock"
            android:layout_width="0dp"
            android:layout_margin="47dp"
            onClickCommand="@{viewModel.clickUnLock}"
            app:layout_constraintEnd_toEndOf="@+id/qrBg"
            app:layout_constraintStart_toStartOf="@+id/qrBg"
            app:layout_constraintTop_toTopOf="@+id/qrBg"
            app:layout_constraintBottom_toBottomOf="@+id/qrBg"
            android:src="@drawable/lock_icon"
            android:background="@color/color_e6ffffff"
            android:scaleType="center"
            isVisible="@{viewModel.showLock}"
            android:layout_marginEnd="16dp"
            android:layout_height="0dp" />

        <TextView
            app:layout_constraintStart_toStartOf="@+id/lock"
            app:layout_constraintEnd_toEndOf="@+id/lock"
            app:layout_constraintTop_toTopOf="@+id/lock"
            app:layout_constraintBottom_toBottomOf="@+id/lock"
            android:layout_marginTop="120dp"
            android:text="@string/home_lock_title"
            isVisible="@{viewModel.showLock}"
            android:textColor="@color/color_0c123d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toBottomOf="@+id/qrBg"
            android:layout_marginTop="12dp"
            style="@style/CardViewStyle"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/home_service"
                    android:textColor="@color/color_0c123d"
                    android:textSize="16sp"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="15dp"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:background="@color/color_f0f1f3"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="1dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:overScrollMode="never"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:itemBinding="@{viewModel.itemBinding}"
                    app:items="@{viewModel.items}"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="3"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>