<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.didchain.didcard.ui.idcard.ShowIDCardViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f8f8f9"
        tools:ignore="MissingConstraints">

        <include
            android:id="@+id/titleLayout"
            layout="@layout/title_layout"
            app:viewModel="@{viewModel}" />

        <androidx.cardview.widget.CardView
            style="@style/CardViewStyle"
            android:layout_marginStart="44dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="44dp"
            app:layout_constraintTop_toBottomOf="@+id/titleLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:layout_marginEnd="33dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/idCardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:text="@string/id_card_title"
                    android:textColor="@color/color_b5b6ba"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/idCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.idCard}"
                    android:textColor="@color/color_0c123d"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="13dp"
                    android:background="@color/color_f0f1f3" />

                <com.didchain.didcard.view.QRImageView
                    android:id="@+id/idQR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:padding="2dp"
                    android:scaleType="fitXY" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/share"
            style="@style/IdCardYellowButtonStyle"
            onClickCommand="@{viewModel.clickShare}"
            android:layout_marginBottom="107dp"
            android:text="@string/id_card_share"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/save"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/save"
            style="@style/IdNavyBlueButtonStyle"
            onClickCommand="@{viewModel.clickSave}"
            android:text="@string/id_card_save"
            app:layout_constraintBottom_toBottomOf="@+id/share"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/share"
            app:layout_constraintTop_toTopOf="@+id/share" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>