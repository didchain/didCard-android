<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.didchain.didcard.ui.authorizationManager.SelectSystemsItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        onClickCommand="@{item.clickItem}"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/url"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@{item.url}"
            android:textColor="@color/color_0c123d"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            isVisible="@{item.hasUserName}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:src="@drawable/psw_icon"
            app:layout_constraintBottom_toBottomOf="@+id/url"
            app:layout_constraintStart_toEndOf="@+id/url"
            app:layout_constraintTop_toTopOf="@+id/url"
            tools:ignore="ContentDescription" />

        <ImageView
            isVisible="@{item.isSelected}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/system_selected"
            app:layout_constraintBottom_toBottomOf="@+id/url"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/url"
            tools:ignore="ContentDescription" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/color_f0f1f3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>